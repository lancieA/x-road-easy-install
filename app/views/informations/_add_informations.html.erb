<%= form_for(information, url: {action: "create", controller: "informations"}) do |f| %>
    <div class="form-group">
      <%= f.label :domain_name %><br/>
      <%= f.text_field :domain_name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :ip_machine %><br/>
      <%= f.text_field :ip_machine, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :machine_name %><br/>
        <%= f.text_field :machine_name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :box %><br/>
        <%= f.select(:box) do %>
          <% [['Ubuntu', "Ubuntu"], ['RedHat', "RedHat"]].each do |c| -%>
            <%= content_tag(:option, c.first, value: c.last) %>
          <% end %>
        <% end %>
    </div>

    <div class="form-group">
      <%= f.label :installation_type %><br/>
      <%= f.select(:installation_type) do %>
        <% [['Instance X Road', "Instance X Road"], ['Security Server', "Security Server"], ['Central Server', "Central Server"], ['Certficat Autority Server', "Certficat Autority Server"], ['Proxy Server', "Proxy Server"]].each do |c| -%>
          <%= content_tag(:option, c.first, value: c.last) %>
        <% end %>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Install", class: 'btn btn-primary' %>
    </div>
 <% end %>